<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8">
    <title>함락</title>
    <style>
     #jb-container {
        width: auto;
        margin: 0px auto;
        padding: 20px;
        border: 1px solid #bcbcbc;
    }
    #jb-header {
        width:auto;
        padding: 20px;
        margin-bottom: 20px;
        border: 1px solid #bcbcbc;
    }  
    #jb-content {
        width: auto;
        height:200px;
        padding: 20px;
        margin-bottom: 20px;
        float: left;
        border: 1px solid #bcbcbc;
        overflow:auto;
    }
    #jb-content-image {
        width: auto;
        padding: 20px;
        margin-bottom: 20px;
        float: right;
        border: 1px solid #bcbcbc;
    }
    #jb-footer {
        width:auto;
        clear: both;
        padding: 20px;
        border: 1px solid #bcbcbc;
    }
    </style>
  </head>

  <body>
    <div id="jb-container">
      <div id="jb-header">
        <h1>분류</h1>
        <ul>
        <li>
         <a href="<%-root_comic %>">만화</a>         
        </li>
        <li>
        <a href="<%-root_novel %>">소설</a>
        </li>
        </ul>
      </div>     
      <div id="jb-content">
        <h2><%= path %></h2>       
        <li>
          <a href="<%=parent%>">상위 폴더로</a>
        </li>        
      <% for (var i = 0; i < files.length; ++i) { %>
    <% if (files[i].isDirectory) { %>
    <li type="circle">
      <a href="<%= files[i].path %>"
      booktitle="<%= files[i].title %>"
      bookdate="<%= files[i].date %>"
      >
        <%= files[i].title %>
      </a>
    </li>
    <% } else { %>
    <li>
      <a href="<%= files[i].path %>"
      booktitle="<%= files[i].title %>"
      booksize="<%= files[i].size %>"
      bookdate="<%= files[i].date %>"
      bookfile="true"
      >
        <%= files[i].title %><%= files[i].update_date %>
      </a>
    </li>
    <% } %>
    <% } %>
      </div>
      <div id="jb-content-image">
        <h2>책표지</h2>       
      </div>
      <div id="jb-footer">
        <h3>Update List(30일 이내)</h3>
        <% for (var i = 0; i < updateFiles.length; ++i) { %>
          <li type="circle">
            <a href="<%= updateFiles[i].path %>" booktitle="<%= updateFiles[i].title %>" >
              <%= updateFiles[i].title %>
            </a>
          </li>
          <% } %>
            </div>
      </div>
      </body>
</html>


